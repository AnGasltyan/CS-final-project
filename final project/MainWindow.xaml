<Window x:Class="GraphSegmentationWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Graph Segmentation" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Number of Vertices:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtNumVertices" Width="50" Margin="5"/>
            <Button Content="Generate Graph" Click="GenerateGraph_Click" Margin="5"/>
        </StackPanel>

        <Canvas x:Name="canvas" Grid.Row="1" Background="White" Margin="10"/>
    </Grid>
</Window>

